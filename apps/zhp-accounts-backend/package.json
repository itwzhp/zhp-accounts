{
  "name": "zhp-accounts-backend",
  "version": "1.0.0",
  "description": "ZHP Accounts Backend API - Node 24 LTS TypeScript",
  "type": "module",
  "main": "dist/main.js",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc && tsc-alias -p tsconfig.json --resolve-full-paths",
    "start": "node dist/main.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "express": "^4.21.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vitest/ui": "^2.0.5",
    "eslint": "^9.9.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.6.3",
    "tsx": "^4.19.2",
    "vitest": "^2.0.5",
    "zhp-accounts-types": "file:../zhp-accounts-types"
  }
}
